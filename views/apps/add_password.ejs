<!DOCTYPE html>
<html>

<head>
    <%- include ('../../layouts/header.ejs'); %>
</head>

<body>
    <br><br>
    <%- include('../../Layouts/logout.ejs') %>
    <div style="padding-left: 15%;">
    <div>
        <h4><%= title %></h4>
    </div>
    <br>
    <div class="container">
        <%- include('../../Layouts/errors.ejs') %>
    </div>
    <form action="/apps/add-password" method="post" name="form1" class="container">
        <div class="form-group">
            <div class="form-group row">
                <label for="app" class="col-2"><strong>Application: </strong> </label>
                <input type="text" class="form-control col-4" name="app" id="app" required>
            </div>
            <div class="form-group row">
                <label for="username" class="col-2"><strong>Username: </strong> </label>
                <input type="text" name="username" class="form-control col-4" id="username" required>
            </div>
            <div class="form-group row">
                <label for="password" class="col-2"><strong>Password: </strong></label>
                <input type="password" name="password" class="form-control col-4" id="password" required>
                <span class="fa fa-eye" id="view" onclick="viewPassword()"></span>
            </div>
            <div class="form-group row">
                <label for="confirm_password" class="col-2"><strong>Confirm Password: </strong></label>
                <input type="password" name="confirm_password" class="form-control col-4" id="confirm_password"
                    required>
            </div>
            <div class="form-group row">
                <input type="submit" class="btn btn-primary" value="Add">
                <a class="btn btn-danger delete" href="/apps/passwords">Cancel</a>
            </div>
        </div>
    </form>
</div>
</body>

</html>
<style type="text/css">
    #view {
        position: relative;
        right: 25px;
        top: 10px;
    }
</style>

<script>
    var viewPassword = function (){
        let password = document.getElementById("password");
        if(password.type == "password"){
            password.type = "text";
            document.getElementById("view").className = "fa fa-eye-slash";
        } else {
            password.type = "password";
            document.getElementById("view").className = "fa fa-eye";
        }
    }
</script>