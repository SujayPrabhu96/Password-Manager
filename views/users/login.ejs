<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../Layouts/header.ejs') %>
</head>

<body>
    <div style="text-align: center;" class="m-5">
        <h2><%= title %></h2>
    </div>
    <center>
        <div class="container">
            <%- include('../../Layouts/errors.ejs') %>
        </div>
        <div class="container">
            <form action="/users/login" method="post" name="form">
                <div class="form-group">
                    <div class="form-group row">
                        <label for="email" class="col-4"><strong>Email: </strong> </label>
                        <div class="col-4">
                            <input type="text" class="form-control" name="email" id="email">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="password" class="col-4"><strong>Password: </strong> </label>
                        <div class="col-4">
                            <input type="password" class="form-control" name="password" id="password" required>
                        </div>
                    </div>
                    <div class="form-group row"></div>
                        <div class="col-4">
                            <input type="submit" class="btn btn-primary form-control" value="Login">
                        </div>
                    </div>
                    <p>No account? <a href="/users/register">Register here</a></p>
                </div>
            </form>
        </div>
    </center>
</body>

</html>